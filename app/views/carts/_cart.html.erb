
<% if !@cart.line_items.empty? %>
	Your Cart
	<table width="100%" >
		
		<%= render(@cart.line_items) %>
		<tr class="total_line">
			<td colspan="2">Total</td>
			<td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
			<td></td>	  
		</tr>
		<tr>
			<td colspan="2"><%= button_to 'Checkout', new_order_path, method: :get %> </td>
			 <td colspan="2"><%= button_to 'Empty Cart', @cart, method: :delete,  data:{ confirm: "Are you Sure!"}, remote: true %> </td>
	</table>
	
	
<% end %>
